<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bean.UserMapper">
    <!-- 根据user_id查询一个用户 -->
    <select id="selectUserByUser_id" parameterType="String" resultType="com.bean.User">
        select * from user where user_id = #{user_id}
    </select>
    <!-- 根据email查询一个用户 -->
    <select id="selectUserByEmail" parameterType="String" resultType="com.bean.User">
        select * from user where email = #{email}
    </select>
    <!-- 添加一个用户-->
    <insert id="addUser" parameterType="com.bean.User">
        insert into user (user_id,email,password,salt,user_name)
        values(#{user_id},#{email},#{password},#{salt},#{user_name})
    </insert>
    <!-- 删除一个用户 -->
    <delete id="deleteUser" parameterType="String">
        delete from user where user_id = #{user_id}
    </delete>
    <select id="totalUser" resultType="long">
        select count(*) from user
    </select>
</mapper>